<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiceRanking">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rank the waiter"
        android:textSize="30sp" />

    <RatingBar
        android:id="@+id/waiterStarRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Did you find the enviroment plesent ?"
        android:textSize="30sp" />

    <CheckBox
        android:id="@+id/isEnvPlesent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plesent ?" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Were the restroom clean ?"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/cleanToilet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/toiletIsClean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clean" />

        <RadioButton
            android:id="@+id/toiletIsDirty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not clean" />
    </RadioGroup>

    <Button
        android:id="@+id/ToCalculateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate total" />

</LinearLayout>